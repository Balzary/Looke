<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    tools:context=".userinterface.activity.ListaActivity">

    <RelativeLayout android:id="@+id/viewLista"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.looke.looke.userinterface.common.WsqRefresh
            android:id="@+id/swpAtualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lstItens"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:layout_alignParentTop="true"
                android:background="#030913">
            </ListView>

        </com.looke.looke.userinterface.common.WsqRefresh>

        <com.looke.looke.userinterface.common.WsqLoading
            android:id="@+id/loadingItens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/viewSemResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:visibility="invisible">

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>